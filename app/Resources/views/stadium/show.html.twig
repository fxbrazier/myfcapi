{% extends 'base.html.twig' %}

{% block body %}
    <h1>Stadium</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ stadium.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ stadium.name }}</td>
            </tr>
            <tr>
                <th>Current_capacity</th>
                <td>{{ stadium.currentcapacity }}</td>
            </tr>
            <tr>
                <th>Maximum_capacity</th>
                <td>{{ stadium.maximumcapacity }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('stadium_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('stadium_edit', { 'id': stadium.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
