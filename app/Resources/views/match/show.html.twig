{% extends 'base.html.twig' %}

{% block body %}
    <h1>Match</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ match.id }}</td>
            </tr>
            <tr>
                <th>Result</th>
                <td>{{ match.result }}</td>
            </tr>
            <tr>
                <th>Winner</th>
                <td>{{ match.winner }}</td>
            </tr>
            <tr>
                <th>Loser</th>
                <td>{{ match.loser }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if match.date %}{{ match.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('match_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('match_edit', { 'id': match.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
